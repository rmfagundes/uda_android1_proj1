<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.aboutcompanies.MainActivity">

    <!-- Imagem -->
    <ImageView
        android:id="@+id/img_intro"
        android:src="@drawable/coworking"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>

    <!-- TAGS -->
    <ImageView
        android:src="@mipmap/ic_business_center_black_48dp"
        android:background="#9e9e9e"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_intro"
        android:text="Inanimind co-working"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <!-- Site -->
    <ImageView
        android:id="@+id/icn_link"
        android:src="@mipmap/ic_link_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/lbl_name"
        android:scaleType="centerInside"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lbl_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_name"
        android:layout_toRightOf="@id/icn_link"
        android:text="www.inanimind.co"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- e-mail -->
    <ImageView
        android:id="@+id/icn_email"
        android:src="@mipmap/ic_mail_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/lbl_link"
        android:scaleType="centerInside"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_link"
        android:layout_toRightOf="@id/icn_email"
        android:text="mailme@inanimind.co"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Phone -->
    <ImageView
        android:id="@+id/icn_phone"
        android:src="@mipmap/ic_phone_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/icn_email"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lbl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_email"
        android:layout_toRightOf="@id/icn_phone"
        android:text="+ 55 71 99999-9999"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Address -->
    <ImageView
        android:id="@+id/icn_map"
        android:src="@mipmap/ic_place_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/lbl_phone"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lbl_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icn_phone"
        android:layout_toRightOf="@id/icn_map"
        android:text="Av. Atmburugy, sn - Paramares\nSalvador- BA"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Open -->
    <ImageView
        android:id="@+id/icn_calendar"
        android:src="@mipmap/ic_date_range_black_48dp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_below="@id/lbl_address"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lbl_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_address"
        android:layout_toRightOf="@id/icn_calendar"
        android:text="Mon - Fri 7am - 8pm\nSat 8pm - 14pm\nWe work when you work - let us know!"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Details -->
    <TextView
        android:id="@+id/lbl_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_open"
        android:text="About Us"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_details"
        android:text="We are are a co-working space located in a great spot Salvador, with wide and diverse areas for freelancers or small teams to gather, network and develop their businesses. We provide basic facilities (watter, electricity and wifi network) and private rooms for meetings. We are open for visits and embrace one-timers with the same enthusiasm as our devoted partners - see our discount rates for monthly or annual plans."
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    />
</RelativeLayout>
